<h1>People</h1>

<table class="table">
  <thead>
    <tr>
      <td>First Name</td>
      <td>Last Name</td>
      <td colspan="3">Links</td>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= link_to('詳細', person_path(person)) %></td>
        <td>編集</td>
        <td>削除</td>
      </tr>
    <% end %>
  </tbody>
</table>